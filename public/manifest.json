{
  "short_name": "HomePage",
  "name": "My Home Page",
  "description": "Extension de Chrome para elaborar una pagina principal totalmente personalizada.",
  "author": "Paul Goury Arnalot",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "My Home Page",
    "default_icon": {
      "16": "/images/home-page-logo-16.png",
      "32": "/images/home-page-logo-32.png",
      "48": "/images/home-page-logo-48.png",
      "128": "/images/home-page-logo-128.png"
    },
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    }
  }
}
